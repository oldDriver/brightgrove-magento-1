<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <!--  global changes in the layout -->
    <default>
       <reference name="header_new">
            <block type="core/template" name="bg-footer" template="brightgrove/footer.phtml" />
        </reference>
        
    </default>
    <!-- This is for controller -->
    <brightgrove_alex_index_index translate="label">
        <label>Beach</label>
        <reference name="root">
            <remove name="footer"/>
            <block type="core/template" name="footer_new" as="footer" template="page/html/footer.phtml" />
        </reference>
        <reference name="content">
            <block name="bg_list" type="brightgrove_alex/list" template="brightgrove/list.phtml" />
        </reference>
        <reference name="header">
            <block type="core/template" name="bg_header" template="brightgrove/header.phtml" />
        </reference>
        <!-- Ссылка на элемкнт -->
        <reference name="footer_new">
            <block type="core/template" name="bg-footer" template="brightgrove/footer.phtml" />
        </reference>
    </brightgrove_alex_index_index>
</layout>